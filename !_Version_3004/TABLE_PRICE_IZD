CREATE TABLE T_PRICE_IZD
EXTERNAL FILE 'T_PRICE_IZD' (
    PI_ID INTEGER NOT NULL,
    PI_NAME VARCHAR(10),
    PI_DATE DATE,
    PI_WEIGHT NUMERIC(15,2),
    PI_PRICE NUMERIC(15,2),
    PI_STATUS INTEGER,
    PI_PRIM VARCHAR(200),
    PI_VISIBLE INTEGER)

ALTER TABLE T_PRICE_IZD
ADD CONSTRAINT PK_T_PRICE_IZD
PRIMARY KEY (PI_ID)

ALTER SEQUENCE NEW_T_PRICE_IZD RESTART WITH 1

CREATE TABLE T_STATUS_PRODUCTION (
    TSP_ID INTEGER NOT NULL,
    TST_STATUS VARCHAR(150))

ALTER TABLE T_STATUS_PRODUCTION
ADD CONSTRAINT PK_T_STATUS_PRODUCTION
PRIMARY KEY (TSP_ID)
